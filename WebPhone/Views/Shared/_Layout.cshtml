<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <!-- Favicons -->
    <link rel="apple-touch-icon" href="~/Assets/client/img/apple-icon.png">
    <link rel="icon" href="~/Assets/client/img/favicon.png">
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/Assets/client/css/material-kit.css">
    <!-- Documentation extras -->
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="~/Assets/client/assets-for-demo/demo.css" rel="stylesheet" />
    <link href="~/Assets/client/assets-for-demo/vertical-nav.css" rel="stylesheet" />
</head>
<body>
    @{Html.RenderAction("MainMenu", "Home");}
    @RenderBody()
    <!-- end-main-raised -->
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="card card-blog">
                    <div class="card-header card-header-image">
                        <a href="#pablo">
                            <img src="~/Assets/client/img/examples/color1.jpg" alt="">
                        </a>
                        <div class="colored-shadow" style="        background-image: url(&quot;../../../../Assets/client/img/examples/color1.jpg&quot;);
        opacity: 1;"></div>
                    </div>
                    <div class="card-body">
                        <h6 class="card-category text-warning">Dynamic Shadows</h6>
                        <h4 class="card-title">
                            <a href="#pablo">The image from this card is getting a yellow shadow</a>
                        </h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-blog">
                    <div class="card-header card-header-image">
                        <a href="#pablo">
                            <img src="~/Assets/client/img/examples/color2.jpg" alt="">
                        </a>
                        <div class="colored-shadow" style="        background-image: url(&quot;../../../../Assets/client/img/examples/color2.jpg&quot;);
        opacity: 1;"></div>
                    </div>
                    <div class="card-body">
                        <h6 class="card-category text-rose">Dynamic Shadows</h6>
                        <h4 class="card-title">
                            <a href="#pablo">The image from this card is getting a pink shadow</a>
                        </h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-blog">
                    <div class="card-header card-header-image">
                        <a href="#pablo">
                            <img src="~/Assets/client/img/examples/color3.jpg" alt="">
                        </a>
                        <div class="colored-shadow" style="        background-image: url(&quot;../../../../Assets/client/img/examples/color3.jpg&quot;);
        opacity: 1;"></div>
                    </div>
                    <div class="card-body ">
                        <h6 class="card-category text-info">Dynamic Shadows</h6>
                        <h4 class="card-title">
                            <a href="#pablo">The image from this card is getting a blue shadow</a>
                        </h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @{ Html.RenderAction("Footer", "Home");}
    <!--   Core JS Files   -->
    <script src="~/Assets/client/js/core/jquery.min.js"></script>
    <script src="~/Assets/client/js/core/popper.min.js"></script>
    <script src="~/Assets/client/js/bootstrap-material-design.js"></script>
    <!--  Google Maps Plugin  -->
    <script src="https://maps.googleapis.com/maps/api/js"></script>
    <!--  Plugin for Date Time Picker and Full Calendar Plugin  -->
    <script src="~/Assets/client/js/plugins/moment.min.js"></script>
    <!--	Plugin for the Datepicker, full documentation here: https://github.com/Eonasdan/bootstrap-datetimepicker -->
    <script src="~/Assets/client/js/plugins/bootstrap-datetimepicker.min.js"></script>
    <!--	Plugin for the Sliders, full documentation here: http://refreshless.com/nouislider/ -->
    <script src="~/Assets/client/js/plugins/nouislider.min.js"></script>
    <!--	Plugin for Select, full documentation here: http://silviomoreto.github.io/bootstrap-select -->
    <script src="~/Assets/client/js/plugins/bootstrap-selectpicker.js"></script>
    <!--	Plugin for Tags, full documentation here: http://xoxco.com/projects/code/tagsinput/  -->
    <script src="~/Assets/client/js/plugins/bootstrap-tagsinput.js"></script>
    <!--	Plugin for Fileupload, full documentation here: http://www.jasny.net/bootstrap/javascript/#fileinput -->
    <script src="~/Assets/client/js/plugins/jasny-bootstrap.min.js"></script>
    <!--	Plugin for Small Gallery in Product Page -->
    <script src="~/Assets/client/js/plugins/jquery.flexisel.js"></script>
    <!-- Plugins for presentation and navigation  -->
    <script src="~/Assets/client/assets-for-demo/js/modernizr.js"></script>
    <script src="~/Assets/client/assets-for-demo/js/vertical-nav.js"></script>
    <!-- Material Kit Core initialisations of plugins and Bootstrap Material Design Library -->
    <script src="~/Assets/client/js/material-kit.js"></script>
    <!-- Fixed Sidebar Nav - js With initialisations For Demo Purpose, Don't Include it in your project -->
    <script src="~/Assets/client/assets-for-demo/js/material-kit-demo.js"></script>
    <script>
        $(document).ready(function () {
            $("#flexiselDemo1").flexisel({
                visibleItems: 4,
                itemsToScroll: 1,
                animationSpeed: 400,
                enableResponsiveBreakpoints: true,
                responsiveBreakpoints: {
                    portrait: {
                        changePoint: 480,
                        visibleItems: 3
                    },
                    landscape: {
                        changePoint: 640,
                        visibleItems: 3
                    },
                    tablet: {
                        changePoint: 768,
                        visibleItems: 3
                    }
                }
            });
        });
    </script>
    @RenderSection("JsFooter", required: false)
</body>
</html>