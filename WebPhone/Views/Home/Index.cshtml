@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listNewProducts = (List<Models.EntityFramework.Phones>)ViewBag.ListNewProducts;
    var listPromotionProducts = (List<Models.EntityFramework.Phones>)ViewBag.ListPromotionProducts;
}
<div class="ecommerce">
    <div class="main main-raised">
        @{Html.RenderAction("Category", "Category");}
        <div class="section">
            <div class="container-fluid">
                <h2 class="section-title">Sản phẩm mới</h2>
                <div class="row">
                    @foreach (var item in listNewProducts)
                    {
                        var url = "/san-pham/" + @item.Meta_title + "-" + @item.Phones_id;
                        <div class="col-md-4">
                            <div class="card card-product no-shadow" data-colored-shadow="false">
                                <div class="card-header card-header-image" data-header-animation="true">
                                    <a href="@url">
                                        <img class="img" src="@item.Image">
                                    </a>
                                </div>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a href="@url">@item.Name_phone</a>
                                    </h4>
                                </div>
                                <div class="card-footer justify-content-center">
                                    <div class="price-container">
                                        <span class="price text-danger">@(item.Promotion_price.HasValue?@item.Promotion_price.Value.ToString("N0"): @item.Price.Value.ToString("N0"))</span>
                                    </div>
                                    <a href="/them-gio-hang?productId=@item.Phones_id&quantity=1" class="btn btn-danger btn-link btn-fab btn-fab-mini" rel="tooltip" data-placement="bottom" data-original-title="Thêm vào giỏ">
                                        <i class="material-icons">add_shopping_cart</i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="section">
            <div class="container-fluid">
                <h2 class="section-title">Sản phẩm khuyến mãi</h2>
                <div class="row">
                    @foreach (var item in listPromotionProducts)
                    {
                        var url = "/san-pham/" + @item.Meta_title + "-" + @item.Phones_id;
                        <div class="col-md-4">
                            <div class="card card-product no-shadow" data-colored-shadow="false">
                                <div class="card-header card-header-image">
                                    <a href="@url">
                                        <img src="@item.Image" alt="@item.Name_phone">
                                    </a>
                                </div>
                                <div class="card-body text-center">
                                    <h4 class="card-title">
                                        <a href="@url">@item.Name_phone</a>
                                    </h4>
                                </div>
                                <div class="card-footer justify-content-center">
                                    <div class="price-container">
                                        <span class="price price-old">@(item.Price.HasValue?@item.Price.Value.ToString("N0"):"Liên hệ")</span>
                                        <span class="price price-new"> @(item.Promotion_price.HasValue?@item.Promotion_price.Value.ToString("N0"):"Hết hàng")</span>
                                    </div>
                                    <a href="/them-gio-hang?productId=@item.Phones_id&quantity=1" class="btn btn-danger btn-link btn-fab btn-fab-mini" rel="tooltip" data-placement="bottom" data-original-title="Thêm vào giỏ">
                                        <i class="material-icons">add_shopping_cart</i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>