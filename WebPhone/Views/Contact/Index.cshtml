
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6 ml-auto mr-auto">
    <div class="card card-contact card-raised">
        <form id="contact-form2" method="post">
            <div class="card-header card-header-primary text-center">
                <h4 class="card-title">Liên hệ</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="info info-horizontal">
                            <div class="icon icon-primary">
                                <i class="material-icons">phone</i>
                            </div>
                            <div class="description">
                                <h5 class="info-title">Số điện thoại</h5>
                                <p>
                                    Võ Tấn Lộc
                                    <br> 0789100065
                                    <br> Thứ 2 - 7, 8:00-22:00
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info info-horizontal">
                            <div class="icon icon-primary">
                                <i class="material-icons">pin_drop</i>
                            </div>
                            <div class="description">
                                <h5 class="info-title">Địa chỉ</h5>
                                <p>
                                    Biên Hòa, Đồng Nai
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group label-floating is-empty has-primary bmd-form-group">
                            <label class="bmd-label-floating">Họ tên</label>
                            <input type="text" name="email" class="form-control">
                            <span class="material-input"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group label-floating is-empty has-primary bmd-form-group">
                            <label class="bmd-label-floating">Email</label>
                            <input type="email" name="email" class="form-control">
                            <span class="material-input"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group label-floating has-primary is-empty bmd-form-group">
                    <label for="exampleMessage" class="bmd-label-floating">Yêu cầu</label>
                    <textarea name="message" class="form-control" id="exampleMessage" rows="6"></textarea>
                    <span class="material-input"></span>
                </div>
            </div>
            <div class="card-footer justify-content-between">
                <button type="submit" class="btn btn-primary">Gửi yêu cầu</button>
            </div>
        </form>
    </div>
</div>  