@{
    int phones = ViewBag.Phones;
    int user = ViewBag.user;
    int commnet = ViewBag.comment;
    int order = ViewBag.order;
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class="row">
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-stats">
                <div class="card-header card-header-info card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">smartphone</i>
                    </div>
                    <p class="card-category">Sản phẩm</p>
                    <h3 class="card-title">@ViewBag.Phones</h3>
                </div>
                <div class="card-footer">
                    <div class="stats">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-stats">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">person</i>
                    </div>
                    <p class="card-category">Người dùng</p>
                    <h3 class="card-title">@ViewBag.user</h3>
                </div>
                <div class="card-footer">
                    <div class="stats">
                       
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-stats">
                <div class="card-header card-header-success card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">assignment</i>
                    </div>
                    <p class="card-category">Đơn hàng</p>
                    <h3 class="card-title">@ViewBag.order</h3>
                </div>
                <div class="card-footer">
                    <div class="stats">                       
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-stats">
                <div class="card-header card-header-danger card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">feedback</i>
                    </div>
                    <p class="card-category">Phản hồi</p>
                    <h3 class="card-title">@ViewBag.comment</h3>
                </div>
                <div class="card-footer">
                    <div class="stats">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>